<odoo>

    <act_window id="action_all_candidate" name="Candidatos0" res_model="res.partner" view_mode="tree,form,kanban" limit="20" />
   
    <record id="all_candidate_dni_search" model="ir.ui.view">
        <field name="name">Filtro por Doc. identificacion</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">

            <field name="name" position="after">
            <field name="vat"/></field>
            </field>
    </record>


    <record id="view_all_candidate_tree" model="ir.ui.view">
        <field name="name">Candidatos1</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="name" />

            </tree>
        </field>
    </record>


    <record id="view_all_candidate_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="action_all_candidate"/>
    </record>


    <!--  Actual vista de forma  -->
    <record id="view_all_candidate_form" model="ir.ui.view">
        <field name="name">Candidatos2</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="id" style="" />
                    <field name="name" />
                    <field name="title" />
                    <field name="street" />
                    <field name="phone" />
                    <field name="mobile" />
                    <field name="country_id" />
                    <field name="gender" />

                    <field name="birthday" />
                    <field name="link_linkedin" />
                    <field name="link_twitter" />
                    <field name="link_side" />
                    <field name="profile" />
                    <field name="cover" />

                </group>

                <notebook>
                    
                    <page string="Experiencia">
                        <div class="o_hr_skills_group o_group_skills col-lg-5 d-flex flex-column" modifiers="{}">
                            <separator string="company_name" modifiers="{}"/>
                            <field mode="tree" nolabel="1" name="partner_jobs_ids" widget="hr_skills" modifiers="{}" id="partner_jobs_ids"/>
                        </div>
                    </page>
                    <page string="Aptitudes">
                        <div class="row" modifiers="{}">
                            <div class="o_hr_skills_group o_group_skills col-lg-5 d-flex flex-column" modifiers="{}">
                                <separator string="Habilidades" modifiers="{}"/>
                                <field mode="tree" nolabel="1" name="partner_skill_ids" widget="hr_skills" modifiers="{}" id="partner_skill_ids"/>
                            </div>
                        </div>
                    </page>
                    <page string="Idiomas">
                        <field name="name" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="search_panel_all_candidate" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="user_id" icon="fa fa-users"/>
                    <field name="category_id" select="multi" icon="fa fa-list"/>
                </searchpanel>
            </search>
        </field>
    </record>


