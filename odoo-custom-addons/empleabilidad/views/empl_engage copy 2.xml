    <record id="remove_candidate_view_sales_purchases" model="ir.ui.view">
        <field name="name">res.partner</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
        <xpath expr="//page[@name='sales_purchases']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        </field>
    </record>




    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">inherited.model.candidate.form.inherit.test</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <!-- 
                Removemos el page = contact_addresses que viene de las vistas anteriores (heredadas)
            -->
          <page name="contact_addresses" position="replace" ></page>
          
          
            <data>

                <!--
                    <field name="company_type" position="replace" />
                  position
                    replace : Quitar el campo de la forma base
                    attributes : cambiar el label
                    before : poner el nuevo campo antes de 
                    after : poner el nuevo campo despues de

                
                <field name="title" position="replace"/>
                <field name="company_name" position="replace"/>
                -->
                <field name="company_name" invisible="True"/>
                <field name="category_id" position="attributes">
                    <attribute name="string">Posiciones</attribute>
                </field>
                <field name="name" position="before">
                    <group name="container_ppal" string="Información básica" style="font-weight:bold">
                        <field name="id" position="after" />
                    </group>
                </field>

                <field name="name" position="before">
                    <group name="container_ppal_2">
                        <field name="title" invisible="0" />
                    </group>
                </field>
               <notebook position="inside">

                <xpath expr="//page[@name='Contacts &amp; Addresses']" position="replace">
                </xpath>
                    <page string="Extra">

                        <group name="container_row_2">
                            <field name="birthday" string="Nacimiento" widget="date" options="{'format': 'DD/MM/YYYY'}" style="width:16%" />
                            <field name="link_linkedin" string="LinkedIn" />
                            <field name="link_twitter" string="twitter" />
                            <field name="link_side" string="Pagina Web" />
                            <field name="profile" string="Profile " widge="html"/>
                            <field name="cover" string="Presentacion " widge="text_html"/>
                        </group>
                    </page>
                    <page string="Educacion">
                        <div class="row" modifiers="{}">
                            <div class="o_hr_skills_group o_group_resume col-lg-12 d-flex flex-column" modifiers="{}">
                                <separator string="Educacion" modifiers="{}"/>
                                <field mode="tree" nolabel="1" name="partner_edus_ids" widget="" modifiers="{}" id="partner_edus_ids"/>
                            </div>
                        </div>
                    </page>
                    <page string="Experiencia">
                        <div class="row" modifiers="{}">
                            <div class="o_hr_skills_group o_group_resume col-lg-12 d-flex flex-column" modifiers="{}">
                                <separator string="Experiencia" modifiers="{}"/>
                                <field mode="tree" nolabel="1" name="partner_jobs_ids" widget="" modifiers="{}" id="partner_jobs_ids"/>
                            </div>
                        </div>

                    </page>
                    <page string="Aptitures">
                        <div class="row" modifiers="{}">
                            <div class="o_hr_skills_group o_group_skills col-lg-7 d-flex flex-column" modifiers="{}">
                                <separator string="Habilidades" modifiers="{}"/>
                                <field mode="tree" nolabel="1" name="partner_skill_ids" widget="hr_skills" modifiers="{}" id="partner_skill_ids"/>
                            </div>
                        </div>
                    </page>
                </notebook>
            </data>
        </field>
    </record>

    <menuitem id="menu_candidate_top_level" name="Empleabilidad-" web_icon="empl_engage,static/description/icon.png" />
    <menuitem id="menu_all_candidate" name = "Candidatos-" parent="menu_candidate_top_level" action="action_all_candidate" sequence="1" groups="" />
   </odoo>