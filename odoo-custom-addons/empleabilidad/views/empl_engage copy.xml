<odoo>
    <!--

    <act_window id="action_all_candidate" name="Candidatos0" res_model="res.partner" view_mode="tree,form" limit="20" />
     -->

    <record id="action_all_candidate" model="ir.actions.act_window">
        <field name="name">Studies</field>
        <field name="res_model">candidate.estudio</field>
        <field name="view_mode">tree,form</field>
        <field name="limit">20</field>
    </record>

    <record id="view_all_candidate_tree" model="ir.ui.view">
        <field name="name">Candidatos1</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" />
                <field name="title" />
                <field name="name" />

            </tree>
        </field>
    </record>
    <!--  Actual vista de forma  -->
    <record id="view_all_candidate_form" model="ir.ui.view">
        <field name="name">Candidatos2</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="id" />
                    <field name="name" />
                    <field name="title" />
                    <field name="street" />
                    <field name="phone" />
                    <field name="mobile" />
                    <field name="country_id" />
                    <field name="gender" />

                    <field name="birthday" />
                    <field name="link_linkedin" />
                    <field name="link_twitter" />
                    <field name="link_side" />
                    <field name="profile" />
                    <field name="cover" />

                </group>
                <notebook>
                    <page string="Educacion">
                        <field name="name" />
                    </page>
                    <page string="Experiencia">
                        <field name="name" />
                    </page>
                    <page string="Aptitures">
                        <field name="name" />
                    </page>
                    <page string="Idiomas">
                        <field name="name" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_all_candidate_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_all_candidate" />
        <field name="view_id" ref="view_all_candidate_tree" />
        <field name="view_mode">tree</field>
        <field name="sequence" eval="2" />
    </record>
    <record id="action_all_candidate_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_all_candidate" />
        <field name="view_id" ref="view_partner_form" />
        <field name="view_mode">form</field>
        <field name="sequence" eval="2" />
    </record>
